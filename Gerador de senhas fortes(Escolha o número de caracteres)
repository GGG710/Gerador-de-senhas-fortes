from random import choice
import string
print("Olá,bem-vindo(a) ao gerador de senhas! ")
tamanho = input("Qual será o tamanho da sua senha?: ")
tamanho = int(tamanho)
valores = string.ascii_letters + string.digits + string.punctuation
senha = ''
for i in range(tamanho):
    senha += choice(valores)

print("Aqui está a sua senha,bom proveito!: " + senha)
